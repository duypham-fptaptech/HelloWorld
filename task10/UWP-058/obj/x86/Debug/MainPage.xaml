<Page x:ConnectionId='1'
    x:Class="UWP_058.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWP_058"
    xmlns:data="using:UWP_058.models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                     >

    <Grid>
        <StackPanel Background="HotPink">
            <Image x:ConnectionId='2' Name="ResultImage" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='3' Name="TempTextBlock" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='4' Name="DescriptionTextBlock" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock x:ConnectionId='5' Name="LocationTextBlock" FontSize="36" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>

